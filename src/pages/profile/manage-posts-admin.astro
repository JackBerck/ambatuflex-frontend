<script>
  const truncateContentTable = document.querySelectorAll(
    ".truncate-content-table"
  );
  truncateContentTable.forEach((content) => {
    const contentText = content.textContent;
    if (contentText.length > 100) {
      content.textContent = contentText.slice(0, 50) + "...";
    }
  });

  const truncateTitleTable = document.querySelectorAll(".truncate-title-table");
  truncateTitleTable.forEach((title) => {
    const titleText = title.textContent;
    if (titleText.length > 50) {
      title.textContent = titleText.slice(0, 15) + "...";
    }
  });

  const truncateTagTable = document.querySelectorAll(".truncate-tag-table");
  truncateTagTable.forEach((tag) => {
    const tagText = tag.textContent;
    if (tagText.length > 50) {
      tag.textContent = tagText.slice(0, 15) + "...";
    }
  });
</script>
